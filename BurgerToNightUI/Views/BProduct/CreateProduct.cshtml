@model BurgerToNightUI.Models.VM.BProductCreateVM

<form asp-action="CreateProduct" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-primary">Create Product</h1>
        <hr />

        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="BProduct.Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="BProduct.Name" class="form-control" />
                <span asp-validation-for="BProduct.Name" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="BProduct.BCategoryId" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="@Model.BProduct.BCategoryId" class="form-select" asp-items="@Model.CategoryList">
                    <option disabled selected>--Select Category--</option>
                </select>
                <span asp-validation-for="@Model.BProduct.BCategoryId" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label asp-for="BProduct.Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="BProduct.Description" class="form-control"></textarea>
                <span asp-validation-for="BProduct.Description" class="text-danger"></span>
            </div>
            <div class="row py-2">
                <div class="col-2">
                    <label asp-for="BProduct.Price" class="control-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="BProduct.Price" class="form-control" />
                    <span asp-validation-for="BProduct.Price" class="text-danger"></span>
                </div>
            </div>
            <div class="row py-2">
                <div class="col-2">
                    <label asp-for="BProduct.PreparingTime" class="control-label pt-2" style="font-size:20px;"></label>
                </div>
                <div class="col-10 pb-3">
                    <input asp-for="BProduct.PreparingTime" class="form-control" />
                    <span asp-validation-for="BProduct.PreparingTime" class="text-danger"></span>
                </div>
                <div>
                    <label asp-for="BProduct.Image"></label>
                    <input type="file" asp-for="BProduct.Image" class="form-control" />
                </div>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="IndexProduct" asp-controller="BProduct" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Create" class="btn btn-success form-control" />
            </div>
        </div>
    </div>
</form>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
