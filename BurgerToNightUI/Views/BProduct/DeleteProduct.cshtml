@model BurgerToNightUI.Models.VM.BProductDeleteVM
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input type="hidden" asp-for="BProduct.Id" />
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-12">
                    <input asp-for="BProduct.Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="BProduct.Name" class="ms-2"></label>
                </div>
                <div class="py-2 col-12">
                    <label asp-for="BProduct.Description" class="ms-2 text-muted"></label>
                    <textarea asp-for="BProduct.Description" class="form-control border-0 shadow"></textarea>
                    <span asp-validation-for="BProduct.Description" class="text-danger"></span>

                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="BProduct.burgerCategory.Title" disabled class="form-control border-0 shadow" />
                    <label asp-for="BProduct.burgerCategory.Title" class="ms-2"></label>
                </div>

                <div class="form-floating py-2 col-12">
                    <input asp-for="BProduct.PriceInCurrency" disabled class="form-control border-0 shadow" />
                    <label asp-for="BProduct.PriceInCurrency" class="ms-2"></label>
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="BProduct.TimeInMinutes" disabled class="form-control border-0 shadow" />
                    <label asp-for="BProduct.TimeInMinutes" class="ms-2"></label>
                </div>
                <div class="row mt-3">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="BProduct" asp-action="IndexProduct" class="btn btn-secondary border form-control">
                            Back to List
                        </a>
                    </div>
                </div>


            </div>
        </form>
    </div>
</div>





