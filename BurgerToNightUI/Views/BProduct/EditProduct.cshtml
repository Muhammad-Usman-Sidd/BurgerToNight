@model BurgerToNightUI.Models.VM.BProductEditVM
<div class="card shadow border-0 my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2"> Update Product</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post" class="row" enctype="multipart/form-data">
            <input asp-for="BProduct.Id" hidden />
            <div class="row">
                <div class="col-10">
                    <div class="border p-3">
                        <div class="form-floating py-2 col-12">
                            <input asp-for="BProduct.Name" class="form-control border-0 shadow" />
                            <label asp-for="BProduct.Name" class="ms-2"></label>
                        </div>
                        <div class="py-2 col-12">
                            <label asp-for="BProduct.Description" class="ms-2 text-muted"></label>
                            <textarea asp-for="BProduct.Description" class="form-control border-0 shadow"></textarea>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="BProduct.Price" class="form-control border-0 shadow" />
                            <label asp-for="BProduct.Price" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input type="file" name="file" class="form-control border-0 shadow" />
                            <label asp-for="BProduct.Image" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <select asp-for="@Model.BProduct.BCategoryId" asp-items="@Model.CategoryList" class="form-select border-0 shadow">
                                <option disabled selected>--Select Category--</option>
                            </select>
                            <label asp-for="@Model.BProduct.BCategoryId" class="ms-2"></label>
                        </div>
                        <div class="form-floating py-2 col-12">
                            <input asp-for="BProduct.PreparingTime" class="form-control border-0 shadow" />
                            <label asp-for="BProduct.PreparingTime" class="ms-2"></label>
                        </div>
                        <div class="row pt-2">
                            <div class="col-6 col-md-3">
                                <button type="submit" class="btn btn-primary form-control">Update</button>
                            </div>
                            <div class="col-6 col-md-3">
                                <a asp-controller="BProduct" asp-action="IndexProduct" class="btn btn-outline-primary border  form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-2">
                    @if (Model.BProduct.ExistingImage != null)
                    {
                        <div class="form-group">
                            <label>Existing Image</label>
                            <img src="data:@Model.BProduct.ExistingImageType;base64,@Model.BProduct.ExistingImage" class="img-thumbnail" alt="Existing Image" />
                        </div>
                    }
                </div>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <script>
        tinymce.init({
            selector: 'textarea',
            plugins: 'anchor autolink charmap image link lists media searchreplace table visualblocks wordcount linkchecker',
            toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough ',
        });
    </script>
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}