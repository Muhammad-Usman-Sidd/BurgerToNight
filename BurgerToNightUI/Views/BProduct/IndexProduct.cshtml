@model List<BProductDTO>
<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Burger Category List</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <div class="row pb-3">
            <div class="col-6">
            </div>
            <div class="col-6 text-end">
                <a asp-controller="BProduct" asp-action="CreateProduct" class="btn btn-primary">
                    <i class="bi bi-plus-circle"></i>Create
                </a>
            </div>
        </div>

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Category ID
                    </th>
                    <th>
                        Price
                    </th>
                    <th>
                        Preparing time
                    </th>

                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model.OrderBy(u => u.BCategoryId))
                {
                    <tr>
                        <td>@obj.Name</td>
                        <td>@obj.BCategoryId</td>
                        <td>@obj.PriceInCurrency</td>
                        <td>@obj.TimeInMinutes</td>

                        <td>

                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="BProduct" asp-action="EditProduct" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i>Edit
                                </a>
                                <a asp-controller="BProduct" asp-action="DeleteProduct" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash-fill"></i>Delete
                                </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>
        </table>

    </div>
</div>
